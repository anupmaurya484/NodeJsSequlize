{
    "variables": {
        "integerVar": 4 ,
        "daysVar": ["Monday", "Tuesday", "Wednesday"],
        "stringVar":"any string",
        "objectVar": {},
        "booleanVar": true
    },
    "actions": [
        {
            "title": "Set value of a variable",
            "name": "Set a variable value",
            "type": "function",
            "mode": "async/await",
            "job": {
                "name": "Set variables",
                "keyValuePairs": [
                    {"var1":"value1 <<stringVar>>"},
                    {"var2":123},
                    {"objVar":{"comment":"i will json.parse this content"}} 
                ]
            }
        },
        {
            "title": "title can be updated, not name",
            "name": "Arithmetic operation",
            "type": "function",
            "mode": "async/await",
            "job": {
                "name": "Arithmetic operation",
                "operand1": "<<integerVar>>",
                "opertor": "add/subsctract/multiply/divide",
                "operand2": 123,
                "output_variable": "name of a variable"
            } 
        },
        {
            "title": "Ask for approval",
            "name": "Approval",
            "type": "get-response",
            "mode": "pause-resume",
            "job": {
                "name":"Approval",
                "config": {
                    "title":"Task name",
                    "description":"Described the task",
                    "source":"related doc's url",
                    "outcomes":["Approve", "Reject"],
                    "defaultOutcome":"Approve",
                    "message":{
                            "assignees":"someone@email.com",
                            "subject":"subject of message",
                            "message":"body or content of message",
                            "files":"file attachments object or base64"
                        },
                    "criteria": ["Anyone", "Majority", "All"],
                    "dueDate": "datetime string",
                    "doThisOnDueDate": "escalate/auto-complete",
                    "escalation": {
                        "assignees":"",
                        "subject":"",
                        "message":"",
                        "files":"file attachments object or base64"
                    },
                    "autoComplete": {
                        "completeTaskAs": "approved/reject/otherOutcomes"
                    }
                }
            }
        },
        {
            "title": "log a message to workflow instance",
            "name": "Log_message",
            "type": "function",
            "mode": "sync/no-wait",
            "job": {
                "name":"Log",
                "config":{
                    "message": "message to log <<any_variable_returning_string>>"
                }
            }
        },
        {
            "title": "Send emails",
            "name": "Send_Email",
            "type": "service",
            "mode": "sync/no-wait",
            "job": {
                "name":"Send_Email", 
                "config":{
                    "name":"Send Email",
                    "sendTo":"kkgan@live.com, RichardR@ntxte07.com, <<email_from_variable>>",
                    "sendType":1,
                    "replyTo":"kkgan@glozic.com, <<email_from_variable>>",
                    "senderName":"KK Gan <<variable_value>>",
                    "ccTo":"kkgan0930@gmail.com",
                    "bccTo":"kokkoon@glozic.com",
                    "subject":"test email",
                    "messageBody":"this is a test mail"
                }
            }
        },
        {
            "title": "Send a SMS",
            "name": "Send SMS",
            "type": "service",
            "mode": "sync/no-wait",
            "job": {
                "name":"Send SMS", 
                "config":{
                    "sendTo":"+6583327738", 
                    "messageBody":"test message <<variable_allowed>>"
                }
            }
        },{
            "title": "If_else action",
            "name": "IF_ELSE",
            "type": "logic",
            "mode": "na",
            "rules": {"and": [
                        {"<": [{"var": "IntegerVar"}, 10]},
                        {"in": ["Friday", {"var": "DaysVar"}]}
                    ]},
            "data": "variables",
            "branches": [
                {
                    "condition": false,
                    "title":"name of branch",
                    "actions": [
                        {
